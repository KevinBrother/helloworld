        "@nestjs/swagger": "^7.4.2",
        "swagger-ui-express": "^5.0.1",
        "@types/minio": "^7.1.1",
        "axios": "^1.6.0",
        "cheerio": "^1.0.0-rc.12",
        "minio": "^8.0.5",
        "node-html-parser": "^7.0.1",
        "playwright": "^1.39.0",
