<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="flex justify-end px-6 mt-4">
      <button class="bg-blue-500 text-white p-2 rounded-lg" onclick="window.location.href='/account/form'">to add</button>
    </div>

    <% accounts.forEach(account => { %>
    <div
      class="bg-white dark:bg-zinc-800 shadow-md rounded-lg p-4 m-2 flex items-center justify-between"
    >
      <div class="flex items-center">
        <img
          src="https://placehold.co/50"
          alt="Placeholder"
          class="w-12 h-12 rounded-full"
        />
        <div class="ml-4">
          <p class="text-lg font-semibold">
            <%= account.name %> - <%= account.date %>
          </p>
          <p class="text-zinc-500 dark:text-zinc-400">
            <%= account.amount %> - <%= account.desc %>
          </p>
        </div>
      </div>
      <button class="bg-red-500 text-white p-2 rounded-lg" onclick="window.location.href='/account/remove/<%= account.id %>'">Delete</button>
    </div>
    <%}) %>
  </body>
</html>
