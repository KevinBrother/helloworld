# 应用配置
APP_NAME=Task Management System
APP_VERSION=1.0.0
APP_ENV=development
APP_HOST=localhost
APP_PORT=3000

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=task_management
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# 任务配置
TASK_DEFAULT_TIMEOUT=300000
TASK_MAX_RETRY_COUNT=3
TASK_CLEANUP_INTERVAL=3600000

# 执行单元配置
EXECUTION_UNIT_HEARTBEAT_INTERVAL=60000
EXECUTION_UNIT_TIMEOUT=180000
EXECUTION_UNIT_DEFAULT_CAPACITY=5

# API配置
API_PREFIX=api/v1
API_RATE_LIMIT=100
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Swagger配置
SWAGGER_ENABLED=true
SWAGGER_TITLE=Task Management API
SWAGGER_DESCRIPTION=任务管理系统API文档
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api-docs